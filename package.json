{
  "name": "backend",
  "version": "0.1.0",
  "repository": "https://github.com/getbard/backend",
  "author": "Anthony Morris <anthony@amorrissound.com>",
  "private": true,
  "scripts": {
    "prebuild": "yarn generate",
    "build": "tsc",
    "build:watch": "tsc -w",
    "dev": "concurrently \"tsnd --respawn src/index.ts\" \"yarn generate --watch\"",
    "prestart": "yarn generate",
    "start": "ts-node src/index.ts",
    "start:watch": "tsnd --respawn src/index.ts",
    "start:production": "node src/index.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "generate": "graphql-codegen --config codegen.yaml"
  },
  "dependencies": {
    "@graphql-codegen/typescript-resolvers": "^1.13.0",
    "apollo-server": "^2.11.0",
    "cuid": "^2.1.8",
    "dotenv": "^8.2.0",
    "firebase-admin": "^8.10.0",
    "graphql": "^14.6.0",
    "lodash.merge": "^4.6.2",
    "slugify": "^1.4.0",
    "unsplash-js": "^6.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.13.0",
    "@graphql-codegen/typescript": "1.13.0",
    "@types/graphql": "^14.5.0",
    "@types/lodash.merge": "^4.6.6",
    "@types/unsplash-js": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  }
}
