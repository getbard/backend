{
  "name": "backend",
  "version": "0.1.0",
  "repository": "https://github.com/getbard/backend",
  "author": "Anthony Morris <anthony@amorrissound.com>",
  "private": true,
  "scripts": {
    "prebuild": "yarn generate",
    "build": "tsc",
    "build:watch": "tsc -w",
    "dev": "concurrently \"tsnd --respawn src/index.ts\" \"yarn generate --watch\"",
    "prestart": "yarn generate",
    "start": "ts-node src/index.ts",
    "start:watch": "tsnd --respawn src/index.ts",
    "start:production": "NODE_ENV=production node src/index.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "generate": "graphql-codegen --config codegen.yaml",
    "firestore": "gcloud beta emulators firestore start --host-port localhost:8989",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@google-cloud/bigquery": "^4.7.0",
    "@graphql-codegen/typescript-resolvers": "^1.13.0",
    "@sendgrid/client": "^7.0.0",
    "@sentry/node": "^5.15.4",
    "apollo-server": "^2.25.3",
    "cuid": "^2.1.8",
    "dotenv": "^8.2.0",
    "escape-html": "^1.0.3",
    "firebase-admin": "^8.10.0",
    "getstream": "^4.5.1",
    "graphql": "^14.6.0",
    "imgix-core-js": "^2.3.1",
    "lodash.merge": "^4.6.2",
    "slate": "^0.57.1",
    "slugify": "^1.4.0",
    "stripe": "^8.38.0",
    "unsplash-js": "^6.0.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.9.0",
    "@graphql-codegen/cli": "^1.13.0",
    "@graphql-codegen/typescript": "1.13.0",
    "@types/escape-html": "^0.0.20",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^25.2.1",
    "@types/lodash.merge": "^4.6.6",
    "@types/unsplash-js": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "babel-jest": "^25.5.1",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "jest": "^25.5.3",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  }
}
